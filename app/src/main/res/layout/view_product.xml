<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    app:strokeWidth="1dp"
    android:id="@+id/cardview_product"
    app:strokeColor="@color/icon_color_700"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_width="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="@dimen/dim_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="fitXY"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/acer_nitro5" />

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/local_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginTop="@dimen/dim_8"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/sub_categoery"
            app:layout_constraintTop_toBottomOf="@+id/sub_categoery" />

        <TextView
            android:id="@+id/orignal_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="â‚¹"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/local_price"
            app:layout_constraintStart_toEndOf="@+id/local_price"
            app:layout_constraintTop_toTopOf="@+id/local_price" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text=""
            android:textColor="@android:color/holo_green_light"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/orignal_price"
            app:layout_constraintStart_toEndOf="@+id/orignal_price"
            app:layout_constraintTop_toTopOf="@+id/orignal_price"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Free Delivery*"
            android:textSize="10sp"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="@+id/local_price"
            app:layout_constraintTop_toBottomOf="@+id/local_price" />


        <com.like.LikeButton
            android:visibility="gone"
            android:id="@+id/star_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="-12dp"
            android:layout_marginBottom="-12dp"
            app:icon_size="20dp"
            app:icon_type="heart"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:like_drawable="@drawable/favorite_like"
            app:unlike_drawable="@drawable/favorite_unlike" />

        <TextView
            
            android:id="@+id/sub_categoery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_8"
            android:maxLength="30"
            android:text=""
            android:textColor="@android:color/darker_gray"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/text_product_name"
            app:layout_constraintTop_toBottomOf="@+id/text_product_name" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/sub_categoery"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/sub_categoery"
            app:layout_constraintTop_toTopOf="@+id/sub_categoery"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/quality_assured" />

    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>

